<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount.CreateAcc_Subjects"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/imgBTN_back"
        android:layout_width="@dimen/_39sdp"
        android:layout_height="@dimen/_39sdp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:adjustViewBounds="true"
        android:background="@drawable/roundedbutton_transparent"
        android:contentDescription="@string/back"
        android:paddingVertical="@dimen/_7sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/txt_SubjectsPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgBTN_back"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/mako"
        android:text="@string/createAccSubjects"
        android:textSize="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_30sdp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/txt_SubjectsPrompt"
        android:layout_above="@+id/btnProceed">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <androidx.constraintlayout.helper.widget.Flow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="layout_AdobePs,layout_Animation,layout_AutoCAD, layout_Programming, layout_MSOffice, layout_Mathematics, layout_Sciences, layout_Arts, layout_Languages, layout_Engineering, layout_Law"
                app:flow_horizontalBias="0"
                app:flow_verticalBias="0"
                app:flow_verticalGap="@dimen/_5sdp"
                app:flow_verticalStyle="spread"
                app:flow_wrapMode="aligned"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/layout_AdobePs"
                android:layout_width="@dimen/subjects_layout_width"
                android:layout_height="@dimen/subjects_layout_height"
                android:background="@drawable/roundedbutton_blue_outline_smaller_radius"
                android:padding="@dimen/subjects_layout_padding">

                <CheckBox
                    android:id="@+id/chk_AdobePs"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:buttonTint="@color/white" />

                <ImageView
                    android:id="@+id/img_AdobePs"
                    android:layout_width="@dimen/subjects_imgView_widthheight"
                    android:layout_height="@dimen/subjects_imgView_widthheight"
                    android:layout_alignTop="@+id/chk_AdobePs"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/subjects_imgView_marginTop"
                    android:src="@drawable/ic_subjects_adobe_ps"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_AdobePs"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="@dimen/subjects_txtView_verticalMargin"
                    android:text="@string/AdobePs"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_Animation"
                android:layout_width="@dimen/subjects_layout_width"
                android:layout_height="@dimen/subjects_layout_height"
                android:background="@drawable/roundedbutton_blue_outline_smaller_radius"
                android:backgroundTint="@color/AdobeAeViolet"
                android:padding="@dimen/subjects_layout_padding">

                <CheckBox
                    android:id="@+id/chk_Animation"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:buttonTint="@color/white" />

                <ImageView
                    android:id="@+id/img_Animation"
                    android:layout_width="@dimen/subjects_imgView_widthheight"
                    android:layout_height="@dimen/subjects_imgView_widthheight"
                    android:layout_alignTop="@+id/chk_Animation"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/subjects_imgView_marginTop"
                    android:src="@drawable/ic_subjects_animation"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_Animation"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="@dimen/subjects_txtView_verticalMargin"
                    android:text="@string/Animation"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_AutoCAD"
                android:layout_width="@dimen/subjects_layout_width"
                android:layout_height="@dimen/subjects_layout_height"
                android:background="@drawable/roundedbutton_blue_outline_smaller_radius"
                android:backgroundTint="@color/AutoCADRed"
                android:padding="@dimen/subjects_layout_padding">

                <CheckBox
                    android:id="@+id/chk_AutoCAD"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:buttonTint="@color/white" />

                <ImageView
                    android:id="@+id/img_AutoCAD"
                    android:layout_width="@dimen/subjects_imgView_widthheight"
                    android:layout_height="@dimen/subjects_imgView_widthheight"
                    android:layout_alignTop="@+id/chk_AutoCAD"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/subjects_imgView_marginTop"
                    android:src="@drawable/ic_subjects_autocad"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_AutoCAD"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="@dimen/subjects_txtView_verticalMargin"
                    android:text="@string/AutoCAD"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_Programming"
                android:layout_width="@dimen/subjects_layout_width"
                android:layout_height="@dimen/subjects_layout_height"
                android:background="@drawable/roundedbutton_blue_outline_smaller_radius"
                android:backgroundTint="@color/ProgrammingCyan"
                android:padding="@dimen/subjects_layout_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <CheckBox
                    android:id="@+id/chk_Programming"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:buttonTint="@color/white" />

                <ImageView
                    android:id="@+id/img_Programming"
                    android:layout_width="@dimen/subjects_imgView_widthheight"
                    android:layout_height="@dimen/subjects_imgView_widthheight"
                    android:layout_alignTop="@+id/chk_Programming"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/subjects_imgView_marginTop"
                    android:src="@drawable/ic_subjects_programming"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_Programming"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="@dimen/subjects_txtView_verticalMargin"
                    android:text="@string/Programming"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_MSOffice"
                android:layout_width="@dimen/subjects_layout_width"
                android:layout_height="@dimen/subjects_layout_height"
                android:background="@drawable/roundedbutton_blue_outline_smaller_radius"
                android:backgroundTint="@color/MSOfficeOrange"
                android:padding="@dimen/subjects_layout_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <CheckBox
                    android:id="@+id/chk_MSOffice"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:buttonTint="@color/white" />

                <ImageView
                    android:id="@+id/img_MSOffice"
