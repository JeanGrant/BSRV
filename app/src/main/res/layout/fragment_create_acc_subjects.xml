                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_Sciences"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="@dimen/subjects_txtView_verticalMargin"
                    android:text="@string/Sciences"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_Arts"
                android:layout_width="@dimen/subjects_layout_width"
                android:layout_height="@dimen/subjects_layout_height"
                android:background="@drawable/roundedbutton_blue_outline_smaller_radius"
                android:backgroundTint="@color/ArtsPurple"
                android:padding="@dimen/_3sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <CheckBox
                    android:id="@+id/chk_Arts"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:buttonTint="@color/white" />

                <ImageView
                    android:id="@+id/img_Arts"
                    android:layout_width="@dimen/subjects_imgView_widthheight"
                    android:layout_height="@dimen/subjects_imgView_widthheight"
                    android:layout_alignTop="@+id/chk_Arts"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/subjects_imgView_marginTop"
                    android:src="@drawable/ic_subjects_arts"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_Arts"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="@dimen/subjects_txtView_verticalMargin"
                    android:text="@string/Arts"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_Languages"
                android:layout_width="@dimen/subjects_layout_width"
                android:layout_height="@dimen/subjects_layout_height"
                android:background="@drawable/roundedbutton_blue_outline_smaller_radius"
                android:backgroundTint="@color/LanguageGreen"
                android:padding="@dimen/subjects_layout_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <CheckBox
                    android:id="@+id/chk_Languages"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:buttonTint="@color/white" />

                <ImageView
                    android:id="@+id/img_Languages"
                    android:layout_width="@dimen/subjects_imgView_widthheight"
                    android:layout_height="@dimen/subjects_imgView_widthheight"
                    android:layout_alignTop="@+id/chk_Languages"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/subjects_imgView_marginTop"
                    android:src="@drawable/ic_subjects_languages"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_Languages"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="@dimen/subjects_txtView_verticalMargin"
                    android:text="@string/Languages"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_Engineering"
                android:layout_width="@dimen/subjects_layout_width"
                android:layout_height="@dimen/subjects_layout_height"
                android:background="@drawable/roundedbutton_blue_outline_smaller_radius"
                android:backgroundTint="@color/EngineeringOrange"
                android:padding="@dimen/subjects_layout_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <CheckBox
                    android:id="@+id/chk_Engineering"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:buttonTint="@color/white" />

                <ImageView
                    android:id="@+id/img_Engineering"
                    android:layout_width="@dimen/subjects_imgView_widthheight"
                    android:layout_height="@dimen/subjects_imgView_widthheight"
                    android:layout_alignTop="@+id/chk_Engineering"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/subjects_imgView_marginTop"
                    android:src="@drawable/ic_subjects_engineering"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_Engineering"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="@dimen/subjects_txtView_verticalMargin"
                    android:text="@string/Engineering"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_Law"
                android:layout_width="@dimen/subjects_layout_width"
                android:layout_height="@dimen/subjects_layout_height"
                android:background="@drawable/roundedbutton_blue_outline_smaller_radius"
                android:backgroundTint="@color/LawBlue"
                android:padding="@dimen/subjects_layout_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <CheckBox
                    android:id="@+id/chk_Law"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:buttonTint="@color/white" />

                <ImageView
                    android:id="@+id/img_Law"
                    android:layout_width="@dimen/subjects_imgView_widthheight"
                    android:layout_height="@dimen/subjects_imgView_widthheight"
                    android:layout_alignTop="@+id/chk_Law"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/subjects_imgView_marginTop"
                    android:src="@drawable/ic_subjects_law"
