                <CheckBox
                    android:id="@+id/chk_Sciences"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:buttonTint="@color/white" />

                <ImageView
                    android:id="@+id/img_Sciences"
                    android:layout_width="@dimen/subjects_imgView_widthheight"
                    android:layout_height="@dimen/subjects_imgView_widthheight"
                    android:layout_alignTop="@+id/chk_Sciences"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/subjects_imgView_marginTop"
                    android:src="@drawable/ic_subjects_science"
