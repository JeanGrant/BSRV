                    android:layout_alignTop="@+id/chk_Mathematics"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/subjects_imgView_marginTop"
                    android:src="@drawable/ic_subjects_mathematics"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_Mathematics"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="@dimen/subjects_txtView_verticalMargin"
                    android:text="@string/Mathematics"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_Sciences"
                android:layout_width="@dimen/subjects_layout_width"
                android:layout_height="@dimen/subjects_layout_height"
                android:background="@drawable/roundedbutton_blue_outline_smaller_radius"
