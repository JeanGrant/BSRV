<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage.Homepage"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:contentDescription="@string/app_name"
                android:paddingVertical="@dimen/_3sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_bsrv_02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/baloo"
                android:text="@string/app_name"
                android:textColor="@color/brown"
                android:textSize="@dimen/_20ssp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/imgBTN_Logout"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:adjustViewBounds="true"
            android:background="@drawable/roundedbutton_transparent"
            android:contentDescription="@string/logout"
            android:paddingVertical="@dimen/_3sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_exit_to_app_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#30000000"
        android:layout_below="@id/container_header"
        android:layout_centerHorizontal="true"/>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/container_footer"
        android:layout_below="@+id/container_header">

    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#30000000"
        android:layout_above="@id/container_footer"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/container_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgBTN_home"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:padding="@dimen/_3sdp"
            android:adjustViewBounds="true"
            android:background="@drawable/roundedbutton_transparent"
            android:contentDescription="@string/home"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_drawables_home_outline"
            android:layout_marginBottom="@dimen/_5sdp"/>

        <ImageButton
            android:id="@+id/imgBTN_Connections"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_5sdp"
            android:adjustViewBounds="true"
            android:background="@drawable/roundedbutton_transparent"
            android:contentDescription="@string/relationships"
            android:padding="@dimen/_1sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_drawables_contacts_outline" />

        <ImageButton
            android:id="@+id/imgBTN_profile"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/roundedbutton_transparent"
            android:contentDescription="@string/profile"
            android:padding="@dimen/_3sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bsrv_05"
            android:layout_marginBottom="@dimen/_5sdp"/>

    </LinearLayout>
</RelativeLayout>