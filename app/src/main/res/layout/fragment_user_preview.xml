<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Homepage.user_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FFFFFF"
        app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:id="@+id/layout_PreviewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageButton
                android:id="@+id/imgBTN_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/logout"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <ImageButton
                android:id="@+id/imgBTN_proposals"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/logout"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_folder_24" />
        </RelativeLayout>
        <ScrollView
            android:id="@+id/layout_mainContainer"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="outsideInset"
            android:layout_below="@+id/layout_PreviewHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_40sdp"
                        app:cardElevation="@dimen/_2sdp"
                        app:cardUseCompatPadding="true">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:padding="@dimen/_55sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_40sdp">

                            <ImageView
                                android:id="@+id/img_UserPic"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:adjustViewBounds="true"
                                android:background="@color/black"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_baseline_person_24"
                                android:contentDescription="@string/profileImage"/>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/txt_fullName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/baloo"
                            android:text="@string/FullName"
                            android:textAlignment="center"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_17ssp" />

                        <TextView
                            android:id="@+id/txt_Email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_fullName"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/podkova"
                            android:text="@string/email"
                            android:textAlignment="center"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:id="@+id/txt_Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt_Email"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/mako"
                            android:text="@string/CurrentlyAccepting"
                            android:textAlignment="center"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_Bio"
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="@string/bio"
                    android:textAlignment="center"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="italic" />

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/podkova"
                            android:text="@string/SubjectsPrompt"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerSubjects"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical"
                            android:overScrollMode="never"
                            android:padding="20dp"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            android:visibility="gone"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/podkova"
                            android:text="@string/SchedulePrompt"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/btn_minusMonth"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/prevMonth"/>
                            <TextView
                                android:id="@+id/txt_MonthView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:textAlignment="center"/>
                            <Button
                                android:id="@+id/btn_plusMonth"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/nextMonth"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/SUN"
                                android:textAlignment="center"
                                android:textSize="@dimen/_12ssp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/MON"
                                android:textAlignment="center"
                                android:textSize="@dimen/_12ssp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/TUE"
                                android:textAlignment="center"
                                android:textSize="@dimen/_12ssp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/WED"
                                android:textAlignment="center"
                                android:textSize="@dimen/_12ssp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/THU"
                                android:textAlignment="center"
                                android:textSize="@dimen/_12ssp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/FRI"
                                android:textAlignment="center"
                                android:textSize="@dimen/_12ssp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/SAT"
                                android:textAlignment="center"
                                android:textSize="@dimen/_12ssp"/>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerCalendar"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_275sdp"
                            android:visibility="gone"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_Proposal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30000000"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="@dimen/_2sdp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_Navigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imgBTN_minimize"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentStart="true"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/back"
                        android:src="@drawable/ic_baseline_arrow_back_24" />

                    <ImageButton
                        android:id="@+id/imgBTN_Delete"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_toStartOf="@id/imgNull"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/back"
                        android:src="@drawable/ic_outline_delete_outline_24"
                        android:visibility="gone"
                        app:tint="#D10000" />

                    <ImageView
                        android:id="@+id/imgNull"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_alignTop="@id/imgBTN_minimize"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_toStartOf="@id/imgBTN_Accept"
                        android:background="#30000000"
                        android:contentDescription="@null"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/imgBTN_Accept"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/back"
                        android:src="@drawable/ic_baseline_check_24"
                        android:visibility="gone"
                        app:tint="#57D100" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#30000000"
                    android:contentDescription="@null" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerProposals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FAFAFA"
                    android:padding="@dimen/_20sdp"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/layout_mainBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FAFAFA"
                    android:padding="@dimen/_20sdp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/uidPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/podkova"
                        android:text="@string/requestUID"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/txtRequestUID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/uidPrompt"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@id/uidPrompt"
                        android:fontFamily="@font/mako"
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/uidPrompt"
                        android:background="#30000000"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/statusPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/uidPrompt"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/podkova"
                        android:text="@string/statusPrompt"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/txt_reqStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/statusPrompt"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@id/statusPrompt"
                        android:fontFamily="@font/mako"
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/statusPrompt"
                        android:background="#30000000"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/subjectPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/statusPrompt"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/podkova"
                        android:text="@string/SubjectPrompt"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/txtSubject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/subjectPrompt"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@id/subjectPrompt"
                        android:fontFamily="@font/mako"
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/subjectPrompt"
                        android:background="#30000000"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/datePrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/subjectPrompt"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/podkova"
                        android:text="@string/datePrompt"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/datePrompt"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@id/datePrompt"
                        android:fontFamily="@font/mako"
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/datePrompt"
                        android:background="#30000000"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/timePrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/datePrompt"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/podkova"
                        android:text="@string/timePrompt"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/timePrompt"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@id/timePrompt"
                        android:fontFamily="@font/mako"
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/timePrompt"
                        android:background="#30000000"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/descPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/timePrompt"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/podkova"
                        android:text="@string/descPrompt"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/txtDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/descPrompt"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/mako"
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/txtDesc"
                        android:background="#30000000"
                        android:contentDescription="@null" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FAFAFA"
                    android:padding="@dimen/_20sdp"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/layout_counterDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hintDate" />

                        <Button
                            android:id="@+id/btn_DatePicker"
                            style="?android:spinnerStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mako"
                            android:text="@string/defTime"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#30000000"
                            android:contentDescription="@null" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_below="@id/layout_counterDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hintStartTime" />

                        <Button
                            android:id="@+id/btn_TimeStartPicker"
                            style="?android:spinnerStyle"
                            android:layout_width="@dimen/_85sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mako"
                            android:text="@string/defTime"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#30000000"
                            android:contentDescription="@null" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_below="@id/layout_counterDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hintEndTime" />

                        <Button
                            android:id="@+id/btn_TimeEndPicker"
                            style="?android:spinnerStyle"
                            android:layout_width="@dimen/_85sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mako"
                            android:text="@string/defTime"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#30000000"
                            android:contentDescription="@null" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_paymentProcedure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FAFAFA"
                    android:padding="@dimen/_20sdp"
                    android:visibility="gone"
                    android:textSize="@dimen/_12ssp"
                    android:text="@string/paymentProcedureTXT"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/mako"/>

                <LinearLayout
                    android:id="@+id/layout_actionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="#10000000"
                        android:contentDescription="@null" />

                    <Button
                        android:id="@+id/btnOfferCounter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/baloo"
                        android:text="@string/counterProposal"
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>